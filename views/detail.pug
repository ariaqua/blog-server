extends layout.pug

block content
  img.header-pictrue(src=data.pictrue width="100%" height="300px")
  main.article
    article
      h1.title= data.title
      time.date(datatime=data.create_date)= new Date(data.create_date).toDateString()
      p.content!= data.content
    .comment
      .row
        input.comment-name(placeholder="Name(required)")
        input.comment-email(placeholder="Email")
      .row
        textarea.comment-conent(placeholder="Say Something")
      .row
        button.submit Submit
    .comments-wrapper

append foot 
  script(src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js")
  script(src="/static/js/comment.js") 
